VAR event = EVENT_RECORDPRICE
VAR sigfail = 0b_000_00_01, 0b_000_01_00, 0b_001_00_00
VAR sigsuccess = 0b_000_00_11, 0b_000_01_01, 0b_000_11_00, 0b_011_00_00

BEGIN_TEMPLATE
load ../axiom.chbin

; - Permitted Transactions: Record Price
; - Validation Keys: All four Axiom keys, three BPC keys
; - Validation Rules:
;       Any two signatures


; one signature
clear
push 0
push { TX_QUANTITY: nd1 }
push $sigfail
event $event
run fail

; two signatures
clear
push 0
push { TX_QUANTITY: nd1 }
push $sigsuccess
event $event
run succeed